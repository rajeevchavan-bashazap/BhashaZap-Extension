{
  "manifest_version": 3,
  "name": "BhashaZap - Indian Language Translator",
  "version": "2.0.0",
  "description": "Double-click any word to see its meaning in Indian multiple languages",
  "author": "Rajeev B Chavan <bhashazap2025@gmail.com>",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://api.mymemory.translated.net/*",
    "https://api.dictionaryapi.dev/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "BhashaZap - Select Indian Languages",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
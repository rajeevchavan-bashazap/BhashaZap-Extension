{
  "manifest_version": 3,
  "name": "BhashaZap - Indian Language Translator",
  "version": "2.0.0",
  "description": "Double-click any word to see its meaning in Indian languages",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "BhashaZap"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}